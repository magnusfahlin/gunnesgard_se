{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome: Attach to client in Docker",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:6001",
            "webRoot": "${workspaceRoot}/client/src",
            "sourceMapPathOverrides": {
              "/app/src/*": "${webRoot}/*"
            },
            "runtimeArgs": [
              "--remote-debugging-port=9222"
            ]
          },
          {
            "name": "Server: Attach to Node in Docker",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/server/",
            "remoteRoot": "/app/"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/server/node_modules/mocha/bin/mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/server/test/setup_env.js",
                "${workspaceFolder}/server/test"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}